@model Technician

@{
    ViewBag.Title = ViewBag.Action + "Technician";
}

<h1>@ViewBag.Title</h1>

<form asp-action="Save" asp-controller="Technician" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name"/>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email" />
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input class="form-control" asp-for="Phone" />
    </div>

    <input type="hidden" asp-for="TechnicianID" />

    @*Save button*@
    <button type="submit" class="mt-3 btn btn-primary">Save</button>

    @*Cancel button*@
    <a class="mt-3  btn btn-primary" asp-controller="Technician" asp-action="List">
        Cancel
    </a>


</form>