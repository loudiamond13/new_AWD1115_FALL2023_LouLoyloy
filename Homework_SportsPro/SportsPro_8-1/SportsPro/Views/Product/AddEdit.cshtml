@model Product

@{
    ViewBag.Title = ViewBag.Action + " Product";   

}

<h1>@ViewBag.Title</h1>

<form asp-controller="Product" asp-action="AddEdit" method="post">

    
    <div asp-validation-summary="All" class="text-danger"></div>
    

    
    <div class="form-group">
        <label asp-for="ProductCode">Code</label>
        <input asp-for="ProductCode" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="YearlyPrice">Yearly Price</label>
        <input asp-for="YearlyPrice" class="form-control"/>
        <span asp-validation-for="YearlyPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate">Release Date</label>
        <input asp-for="ReleaseDate" class="form-control"/>
    </div>

    <input type="hidden" asp-for="ProductID" />

    @*Save button*@
    <button type="submit" class="mt-3 btn btn-primary">Save</button>

    @*Cancel button*@
    <a class="mt-3  btn btn-primary" asp-controller="Product" asp-action="List">
        Cancel
    </a>

    

</form>