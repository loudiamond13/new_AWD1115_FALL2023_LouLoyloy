@model IEnumerable<Customer>

@{
    ViewBag.Title = "Customer Manager";
}

<h1>@ViewBag.Action</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>City</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Customer customer in Model)
        {
            <tr>
                <td>@customer.FullName</td>
                <td>@customer.Email</td>
                <td>@customer.City</td>

                <td>
                    <a asp-controller="Customer" asp-action="Edit"
                       asp-route-id="@customer.CustomerID" class="btn btn-primary">
                        Edit
                    </a>
                </td>

                <td>
                    <a asp-controller="Customer" asp-action="Delete"
                       asp-route-id="@customer.CustomerID" class="btn btn-primary">
                        Delete
                    </a>
                </td>

            </tr>       


        }
    </tbody>

</table>

<a asp-controller="Customer" asp-action="Add"
   class=" mt-3 btn btn-primary">
    Add Customer
</a>