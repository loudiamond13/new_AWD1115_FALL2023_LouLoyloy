@model Customer

@{
    ViewBag.Title = "Delete Technician";
}

<div class="jumbotron alert-danger mt-5">
    <h1>Confirm Deletion</h1>
    <p>Are you sure you want to delete @Model.FullName?</p>

    <form asp-controller="Customer" asp-action="Delete" method="post">
        <input type="hidden" asp-for="CustomerID">

        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Customer" asp-action="List" class="btn btn-primary">Cancel</a>
    </form>
</div>