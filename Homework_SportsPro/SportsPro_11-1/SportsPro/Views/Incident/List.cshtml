@using SportsPro.Models.ViewModels
@using SportsPro.Models


@model IncidentViewModel
@{
    ViewBag.Title = "Incident Manager";

    string selectedNAV (string selected)
    {
        string currentFilter = ViewContext.RouteData.Values["action"].ToString();

        return (selected == currentFilter) ? "active" : "";
    }
}

<h1>@ViewBag.Title</h1>
<ul class="nav nav-pills mb-2">
    <li class="nav-item">
        <a class="btn btn-outline-primary @selectedNAV("List")" asp-action="List" asp-controller="Incident">
            All Incidents
        </a>
    </li>

    <li class="nav-item mx-2">
        <a class="btn btn-outline-primary @selectedNAV("UnassignedIncidents")" asp-action="UnassignedIncidents" asp-controller="Incident">
            Unassigned Incidents
        </a>
    </li>

    <li class="nav-item">
        <a class="btn btn-outline-primary @selectedNAV("OpenIncidents")" asp-action="OpenIncidents" asp-controller="Incident">
            OpenIncidents
        </a>
    </li>
</ul>

<table class="table-striped table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Date Opened</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var i in Model.Incidents)
        {
            <tr>
                <td>@i.Title</td>
                <td>@i.Customer?.FullName</td>
                <td>@i.Product?.Name</td>
                <td>@i.DateOpened</td>

                <td>
                    <a class="btn btn-primary" asp-controller="Incident"
                        asp-action="Edit" asp-route-id="@i.IncidentID">
                        Edit
                    </a>
                </td>

                <td>
                    <a class="btn btn-primary" asp-controller="Incident"
                       asp-action="Delete" asp-route-id="@i.IncidentID">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>

<td>
    <a class="btn btn-primary" asp-controller="Incident"
       asp-action="Add">
        Add Incident
    </a>
</td>


