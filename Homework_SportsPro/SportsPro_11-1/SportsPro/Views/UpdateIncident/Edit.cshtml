@model Incident
@{
    ViewData["title"] = "Edit Incident";
}

<h3>Edit Incident</h3>

<div class="form-group">
    <label class="form-label" asp-for="@Model.?Technician.TechnicianID">Technician Name: </label>
    <input type="text" readonly="true" class="form-control" asp-for="@Model.Technician.Name" />
</div>

<div class="form-group">
    <label class="form-label" asp-for="@Model.CustomerID">Customer Name: </label>
    <input type="text" readonly="true" class="form-control" asp-for="@Model.Customer.FullName" />
</div>

<div class="form-group">
    <label class="form-label" asp-for="@Model.Product">Product Name: </label>
    <input type="text" readonly="true" class="form-control" asp-for="@Model.Product.Name" />
</div>

<div class="form-group">
    <label class="form-label" asp-for="@Model.Title">Title: </label>
    <input type="text" readonly="true" class="form-control" asp-for="@Model.Title" />
</div>

<div class="form-group">
    <label class="form-label" asp-for="@Model.DateOpened">Date Open: </label>
    <input type="text" readonly="true" class="form-control" asp-for="@Model.DateOpened" />
</div>
<form  asp-action="Edit" asp-controller="UpdateIncident" method="post">
  

    <div class="form-group">
          <label class="form-label" asp-for="@Model.Description">Description: </label>
          <input class="form-control" asp-for="@Model.Description"/>
    </div>

    <div class="form-group mt-3">
        <label class="form-label" asp-for="@Model.DateClosed">Date Closed: </label>
        <input class="form-control" asp-for="@Model.DateClosed" />
    </div>


    <input type="hidden" asp-for="IncidentID"/>
    <div class="form-group mt-3">
        <button class="btn-primary btn" type="submit">Save</button>

        <a class="mx-3 btn btn-primary" asp-controller="UpdateIncident"
           asp-action="GetTech">Cancel</a>
    </div>
    
</form>

