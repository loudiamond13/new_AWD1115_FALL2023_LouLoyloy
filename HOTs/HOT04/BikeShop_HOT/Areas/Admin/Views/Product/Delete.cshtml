@model Product
@{
    ViewBag.Title = "Delete Product";
}

<div class="jumbotron alert-danger mt-5 text-center">
    
    <p>Are you sure you want to delete <span class="text-danger">@Model.Name</span>?</p>

    <form asp-controller="Product" asp-area="Admin" asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProductID">

        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Product" asp-area="Admin" asp-action="List" class="btn btn-primary">Cancel</a>
    </form>
</div>