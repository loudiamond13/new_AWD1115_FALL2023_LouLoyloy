@model DistanceConverterModel

@{
    ViewData["Title"] = "Distance Converter";
}



<form method="post" asp-action="Index" asp-controller="DistanceConverter">
    <div class="container">
        <div>
            <label class="mt-3" asp-for="DistanceInInches"><strong>Distance In Inches</strong></label>

        </div>

        <div>
            <input asp-for="DistanceInInches" />
            <span class="text-danger" asp-validation-for="DistanceInInches"></span>
        </div>

        <div>
            <button class="mt-2 btn btn-primary" type="submit">Convert To Cm</button>
            <a class="ml-5 mt-2 btn btn-primary" asp-controller="DistanceConverter" asp-action="Index">Clear</a>
        </div>
        <br>
        <label class="result">@ViewBag.DistanceInInches.ToString()</label>
    </div>
</form>